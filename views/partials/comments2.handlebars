{{#each this}}
  <article class="media">
    <figure class="media-left">
      <p class="image is-48x48">
        <img src={{user.avatar}} />
      </p>
    </figure>
    <div class="media-content">
      <div class="content">
        <p>
          <strong>Project Name:</strong>
          {{project.project_name}}
          <br />
          <br />
          {{comment_text}}
          <br />
          <div class="block">
            <small>{{format_posted_date created_at}}</small>
          </div>
        </p>
      </div>
    </div>
  </article>
{{/each}}