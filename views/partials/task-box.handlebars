<article class="media">
  <figure class="media-left">
    <p class="image is-64x64">
      <img src="/images/def-avatar.png" />
    </p>
  </figure>
  <div class="media-content">
    <div class="field">
      <label class="label">Task Name</label>
      <div class="control">
        <input
          required
          id="task-name"
          class="input"
          type="text"
          placeholder="Enter a task name"
        />
      </div>
    </div>
    <div class="field">
      <label class="label">Task Description</label>
      <p class="control">
        <textarea
          required
          id="task-description"
          name="task-body"
          class="textarea"
          placeholder="Add a description to the task"
        ></textarea>
      </p>
    </div>
    <div class="field">
      <p class="control">
        <button class="button" id="task-btn">Post task</button>
      </p>
    </div>
  </div>
</article>

<script src="/javascript/task.js"></script>