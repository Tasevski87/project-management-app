<div class="container">
  <div class="columns is-centered">
    <div class="column">
      <div class="card">
        <div class="card-content">
          <article class="media">
            <figure class="media-left">
              <p class="image is-64x64">
                <img src={{project.user.avatar}} />
              </p>
            </figure>
            <div class="media-content">
              <div class="content">
                <p>
                  <strong class="is-title">Title:
                    {{project.project_name}}  </strong><small>  ·
                    {{project.created_at}}</small>
                  <br />
                  <strong>Description:</strong>
                  {{project.content}}
                  <br />
                  <strong>Author:</strong>
                  {{project.user.username}}
                  <br />
                  <a class="view-project" href="/project/{{project.id}}/comments"><strong
                      >Comment</strong></a>  ·   
                  <a class="view-project" href="/project/{{project.id}}/tasks"><strong
                    >Add Task</strong></a>
                </p>
              </div>
              {{> tasks project.tasks }}
            </div>
          </article>
          {{#if loggedIn}}
            {{> task-box }}
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>